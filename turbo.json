{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".nuxt/**", ".output/**"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build", "^test"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "prisma:migrate": {
      "cache": false
    },
    "prisma:seed": {
      "cache": false
    }
  }
}
